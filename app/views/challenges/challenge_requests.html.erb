<h1>Your Challenges</h1>
<% if @challenges.present?%>
<table class="table table-bordered">
		<tr>
			<th>Challenge Name</th>
			<th>Challenged User</th>
			<th></th>
		</tr>
	<% @challenges.each do |challenge|%>
		<tr>
		 <td><%= challenge.challenge_name%></td>
		 <% challenger_name = User.find(challenge.user_id).name%>
		 <td><%= challenger_name%></td>
		 <td><%= link_to "Accept",accept_challenges_path(:challenge_id=> challenge.id), :class => "btn btn-success"%></td>
		</tr>
	<%end%>
<%else%>
<h2>You have no pending challenges</h2>
<%end%>