<style>
body { 
  background: url(http://www.twitterevolutions.com/bgs/abstract-green-twitter-background.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.panel-default {
opacity: 0.9;
margin-top:30px;
}
.form-group.last { margin-bottom:0px; }
</style>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-lock"></span> Login</div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-horizontal") do |f| %>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">
                            Email</label>
                        <div class="col-sm-9">
                            <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "inputEmail3", :placeholder => "Email" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-3 control-label">
                            Password</label>
                        <div class="col-sm-9">
                            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id =>"inputPassword3", :placeholder => "Password"  %>    
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                  <% if devise_mapping.rememberable? -%>
                                    <%= f.check_box :remember_me %>
                                      Remember me
                                  <% end -%>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                                <%= f.submit "Sign in", :class => "btn btn-success btn-sm"%>
                                 <button type="reset" class="btn btn-default btn-sm">
                                Reset</button>
                        </div>
                        <div class = "pull-right text-warning "><%= alert %></div>
                    </div>
                  <% end %>
                </div>
                <div class="panel-footer">
                  Not Registred? 
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Register here", new_registration_path(resource_name) %>
                  <% end -%>
                </div>
            </div>
        </div>
    </div>
</div>
